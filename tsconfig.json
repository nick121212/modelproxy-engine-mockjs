{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "noEmitHelpers": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "./libs",
        "lib": ["es5", "dom", "es2017", "es6", "es2015"]
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": false,
        "useCache": false,
        "emitRequireType": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}